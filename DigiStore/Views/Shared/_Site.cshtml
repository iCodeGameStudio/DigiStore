<!DOCTYPE html>

<html lang="fa" dir="rtl">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="icon" type="image/png" href="~/Images/Site/ADQ.png" asp-append-version="true" />
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewBag.Title</title>

    <!-- CSS Global (همه صفحات) -->
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/css/swiper-bundle.min.css">
    <link rel="stylesheet" href="~/css/app.css">
    <link rel="stylesheet" href="~/css/font.css" /> <!-- تکرار حذف شد -->
    <link rel="stylesheet" href="~/css/panel/font-awesome.css" />
    <link href="~/css/all.min.css" rel="stylesheet" />
    <link href="~/css/menu.css" rel="stylesheet" />
    <link href="~/css/modal.css" rel="stylesheet" />
    <link href="~/css/categorysearch.css" rel="stylesheet" />
    <!-- CSS اختصاصی برای بخش‌های دیگر را می‌توانید با RenderSectionAsync اضافه کنید -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-light dark:bg-zinc-900 text-text-primary-light dark:text-text-primary-dark transition-colors duration-200">

    <!-- ================= start header ================= -->
    <header id="topHeader" class="sticky top-0 right-0 left-0 z-20 bg-white shadow-md dark:bg-zinc-900">
        <!-- نوار بالایی: لوگو، جستجو، آیکون‌ها -->
        <div class="container mx-auto px-4">
            <div class="grid place-items-center gap-3 grid-cols-12 py-3">
                <!-- دکمه منوی موبایل -->
                <div class="lg:hidden col-span-2 w-full">
                    <a href="javascript:void(0)" id="mobile-menu-trigger" class="p-2">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7 dark:text-white">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                        </svg>
                    </a>
                </div>

                <!-- لوگو -->
                <div class="lg:col-span-2 lg:order-1 order-2 col-span-6 w-full">
                    <a href="~/">
                        <div class="lg:text-start text-center">
                            <img class="md:h-12 h-10 mx-auto lg:mx-0" src="~/Images/Site/Logo.png" loading="lazy" alt="دیجی استور">
                        </div>
                    </a>
                </div>

                <!-- جستجو و فیلتر (فقط دسکتاپ) -->
                <div class="lg:col-span-6 lg:block lg:order-2 order-4 hidden col-span-4 w-full">
                    <div class="flex items-center">
                        <!-- search -->
                        <div class="relative flex items-center w-full">
                            <input type="search" class="w-full appearance-none dark:text-white rounded-3xl  border border-gray-300 py-3 pr-18 px-3 dark:placeholder-gray-400 dark:bg-zinc-800" placeholder="جستجوی محصولات ....">
                            <button class="bg-primary-grad  p-2 text-white rounded-3xl absolute right-1">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 dark:text-white">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"></path>
                                </svg>
                            </button>
                        </div>
                        <!-- filter -->
                        <div data-modal-target="filterModal" class="modal-trigger border px-2 py-1 ms-3 cursor-pointer rounded-lg border-gray-300 flex items-center dark:border-zinc-700">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 dark:text-white">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z"></path>
                            </svg>
                            <div class="ms-2 text-center">
                                <p class="text-xs text-nowrap dark:text-white">انتخاب مکان</p>
                                <span class="text-primary text-xs text-nowrap"> فیلتر شهر</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ناحیه کاربری (ورود، سبد خرید و...) -->
                <div class="lg:col-span-4 col-span-4 order-3 w-full">
                    <div class="flex items-center justify-end">
                        <div class="flex items-center md:gap-x-5 gap-x-3">

                            <div class="flex items-baseline md:me-5 me-2">
                                <!-- call -->
                                <a href="#" class="lg:block hidden">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 dark:text-white">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"></path>
                                    </svg>
                                </a>
                                <!-- basket -->
                                <div onclick="toggleOffcanvas('offcanvas-left')" class="relative md:ms-5 ms-2 flex cursor-pointer">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7 dark:text-white">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z"></path>
                                    </svg>
                                    <span class="size-5 text-sm -top-3 -end-2 absolute bg-primary-grad dark:bg-white text-white rounded-lg text-center">2</span>
                                </div>
                                <!-- dark mode -->
                                <div class="md:ms-5 ms-2">
                                    <button id="dark-mode-toggle">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="lg:size-8 size-6 dark:block hidden dark:text-white">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z"></path>
                                        </svg>
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="lg:size-8 size-6 dark:hidden block dark:text-white">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z"></path>
                                        </svg>
                                    </button>
                                </div>
                            </div>

                            <!-- جداکننده عمودی -->
                            <div class="hidden lg:inline-block h-8 w-px self-stretch bg-gray-200 dark:bg-zinc-700"></div>

                            <div x-data="{ open: false }" class="relative inline-block text-left" x-on:keydown.escape.window="open = false">
                                <!-- دکمه ناحیه کاربری -->
                                <button type="button"
                                        x-on:click="open = !open"
                                        class="bg-white dark:bg-zinc-900 dark:text-white text-dark flex items-center lg:py-2 lg:px-3 lg:border lg:border-gray-400 rounded-lg dark:border-zinc-700">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                         stroke="currentColor" class="lg:size-6 lg:ml-2 size-7">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                              d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                    </svg>
                                    <span class="lg:inline-block hidden">ناحیه کاربری</span>
                                </button>

                                <!-- منو -->
                                <div x-cloak
                                     x-show="open"
                                     x-transition
                                     x-on:click.outside="open = false"
                                     class="absolute left-0 mt-2 w-max min-w-[12rem] rounded-lg shadow-lg bg-white dark:bg-zinc-900 border border-gray-200 dark:border-zinc-700 z-50 whitespace-nowrap">
                                    <ul class="py-2 text-sm text-gray-700 dark:text-gray-200 text-center">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <li>
                                                <a href="~/Accounts/login" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-zinc-800 rounded-lg">
                                                    <span class="fa-regular fa-user"></span>
                                                    پروفایل
                                                </a>
                                            </li>
                                            <li>
                                                <a href="~/Accounts/Logout" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-zinc-800 rounded-lg">
                                                    <span class="fa-regular fa-sign-out"></span> <!-- آیکون خروج -->
                                                    خروج از حساب
                                                </a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                <a href="~/Accounts/login" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-zinc-800 rounded-lg">
                                                    <span class="fa-regular fa-key"></span>
                                                    ورود به حساب کاربری
                                                </a>
                                            </li>
                                            <li>
                                                <a href="~/Accounts/Register" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-zinc-800 rounded-lg">
                                                    <span class="fa-regular fa-user"></span>
                                                    عضویت در سایت
                                                </a>
                                            </li>
                                        }
                                        <li>
                                            <a href="~/Accounts/Store" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-zinc-800 rounded-lg">
                                                <span class="fa-regular fa-shopping-bag"></span>
                                                میخواهم فروشنده بشوم
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- نوار پایینی: منوی دسته‌بندی‌ها (فقط دسکتاپ) - ساختار یکپارچه -->
        <nav class="container mx-auto hidden lg:flex items-center h-[56px] border-t border-gray-200 dark:border-zinc-700">

            <!-- آیتم اول: منوی دسته‌بندی‌ها -->
            <div class="category-menu-container h-full nav-item">
                <a class="category-trigger-link">
                    <!-- آیکون SVG یا Font Awesome می‌تواند اینجا باشد -->
                    دسته بندی کالاها
                </a>
                <!-- این div یک Placeholder است که جاوااسکریپت محتوای Mega Menu را در حالت دسکتاپ به اینجا منتقل می‌کند -->
                <div id="desktop-menu-container" class="relative"></div>
            </div>

            <!-- آیتم‌های بعدی: سایر منوها -->
            <a href="#" class="other-menu nav-item">
                <i class="fa-regular fa-fire-flame-curved ml-2"></i>
                فروش ویژه
            </a>
            <a href="#" class="other-menu nav-item">
                <i class="fa-regular fa-percent ml-2"></i>
                تخفیف‌ها و پیشنهادها
            </a>
            <a href="#" class="other-menu nav-item">
                <i class="fa-regular fa-gem ml-2"></i>
                پرفروش‌ترین‌ها
            </a>
            <a href="#" onclick="BannerModal()" class="other-menu nav-item" data-toggle="modal" data-target="#LargeModel" data-title="تعرفه تبلیغات">
                <i class="fa-regular fa-rectangle-ad ml-2"></i>
                تعرفه تبلیغات
            </a>

        </nav>
    </header>


    <!-- ساختار مگا منو (برای مدیریت بهتر، ابتدا اینجا رندر می‌شود و سپس توسط JS جابجا می‌شود) -->
    <!-- MenuComponent باید یک div با ID "mega-menu-content" رندر کند -->
    <div id="mega-menu-wrapper" class="absolute hidden">
        @await Component.InvokeAsync("MenuComponent")
    </div>
    <div class="mobile-menu-overlay"></div>
    <!-- ================= end header ================= -->
    @RenderBody()

    <!-- ================= start footer section ================= -->
    <section class="py-5 dark:text-white dark:bg-zinc-900 bg-white drop-shadow-md border-t border-gray-200 dark:border-zinc-700" itemscope="" itemtype="http://schema.org/WPFooter">
        <div class="container mx-auto px-4">
            <!-- Logo and Back to Top -->
            <div class="grid gap-4 grid-cols-4 place-items-center" itemscope="" itemtype="http://schema.org/Organization">
                <div class="sm:col-span-3 col-span-2 w-full">
                    <a href="~/" itemprop="url">
                        <figure itemprop="logo" itemscope="" itemtype="https://schema.org/ImageObject">
                            <img src="~/Images/Site/logo.png" class="h-12" alt="لوگوی فروشگاه دیجی استور" itemprop="contentUrl">
                            <meta itemprop="caption" content="لوگوی رسمی فروشگاه دیجی استور">
                        </figure>
                    </a>
                </div>
                <div class="sm:col-span-1 col-span-2 w-full">
                    <div class="text-left">
                        <a href="#topHeader" class="inline-flex border px-4 py-1.5 item-center justify-between rounded-lg dark:border-zinc-700" aria-label="بازگشت به بالای صفحه">
                            <span>بازگشت بالا</span>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 ms-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 15.75 7.5-7.5 7.5 7.5"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Contact Information -->
            <div class="flex my-10 items-start flex-wrap space-y-4 space-x-4 divide-x-2  sm:divide-neutral-600 divide-transparent" itemscope="" itemtype="http://schema.org/ContactPoint">
                <div class="space-x-3 pl-2" itemprop="contactOption" itemscope="" itemtype="http://schema.org/ContactPoint">
                    <span class="inline-block">شماره تماس:</span>
                    <span class="inline-block" itemprop="telephone">021-12345678</span>
                </div>
                <div class="space-x-3 pl-2" itemprop="contactOption" itemscope="" itemtype="http://schema.org/ContactPoint">
                    <span class="inline-block">آدرس ایمیل:</span>
                    <a href="mailto:site@gmail.com" class="inline-block" itemprop="email">site@gmail.com</a>
                </div>
                <div class="space-x-3 pl-2">
                    <meta itemprop="hoursAvailable" content="Mo-Su,00:00-23:59">
                    <span class="inline-block">هفت روز هفته ، 24 ساعت شبانه‌روز پاسخگوی شما هستیم.</span>
                </div>
            </div>
            <!-- Menu Columns -->
            <div class="grid gap-4 grid-cols-4 place-items-start">
                <div class="lg:col-span-1 sm:col-span-2 col-span-4 w-full">
                    <h4 class="font-bold text-lg mb-5" aria-label="راهنمای خرید">راهنمای خرید</h4>
                    <ul class="space-y-4 mt-1" role="menu">
                        <li role="menuitem"><a href="#" itemprop="significantLink" class="hover:text-primary transition-colors">نحوه ثبت سفارش</a></li>
                        <li role="menuitem"><a href="#" itemprop="significantLink" class="hover:text-primary transition-colors">رویه ارسال سفارش</a></li>
                        <li role="menuitem"><a href="#" itemprop="significantLink" class="hover:text-primary transition-colors">شیوه های پرداخت</a></li>
                        <li role="menuitem"><a href="#" itemprop="significantLink" class="hover:text-primary transition-colors">رویه های بازگرداندن کالا</a></li>
                    </ul>
                </div>
                <div class="lg:col-span-1 sm:col-span-2 col-span-4 w-full">
                    <h4 class="font-bold text-lg mb-5" aria-label="سیاست‌های فروشگاه">فروشگاه</h4>
                    <ul class="space-y-4 mt-1" role="menu">
                        <li role="menuitem"><a href="#" itemprop="significantLink" class="hover:text-primary transition-colors">حریم خصوصی</a></li>
                        <li role="menuitem"><a href="#" itemprop="significantLink" class="hover:text-primary transition-colors">شرایط استفاده</a></li>
                        <li role="menuitem"><a href="#" itemprop="significantLink" class="hover:text-primary transition-colors">رویه های بازگرداندن کالا</a></li>
                        <li role="menuitem"><a href="#" itemprop="significantLink" class="hover:text-primary transition-colors">پاسخ به پرسش های متداول</a></li>
                    </ul>
                </div>
                <div class="lg:col-span-1 sm:col-span-2 col-span-4 w-full">
                    <h4 class="font-bold text-lg mb-5" aria-label="درباره ما">درباره ما</h4>
                    <ul class="space-y-4 mt-1" role="menu">
                        <li role="menuitem"><a href="#" itemprop="significantLink" class="hover:text-primary transition-colors">اتاق خبر</a></li>
                        <li role="menuitem"><a href="#" itemprop="significantLink" class="hover:text-primary transition-colors">فروش در فروشگاه ما</a></li>
                        <li role="menuitem"><a href="#" itemprop="significantLink" class="hover:text-primary transition-colors">فرصت های شغلی</a></li>
                        <li role="menuitem"><a href="#" itemprop="significantLink" class="hover:text-primary transition-colors">تماس با ما</a></li>
                    </ul>
                </div>
                <div class="lg:col-span-1 sm:col-span-2 col-span-4 w-full">
                    <h4 class="font-bold text-lg my-5" aria-label="شبکه‌های اجتماعی">رسانه های خبری ما</h4>
                    <ul class="flex items-center space-x-4" role="list">
                        <li role="listitem"><a href="#" itemprop="sameAs"><img src="~/Images/Test/rubika.png" alt="ربیکا" class="size-7"></a></li>
                        <li role="listitem"><a href="#" itemprop="sameAs"><img src="~/Images/Test/aparat.png" alt="آپارات" class="size-7"></a></li>
                        <li role="listitem"><a href="#" itemprop="sameAs"><img src="~/Images/Test/bale.png" alt="بله" class="size-7"></a></li>
                        <li role="listitem"><a href="#" itemprop="sameAs"><img src="~/Images/Test/eitta.png" alt="ایتا" class="size-7"></a></li>
                        <li role="listitem"><a href="#" itemprop="sameAs"><img src="~/Images/Test/igap.png" alt="ایگپ" class="size-7"></a></li>
                        <li role="listitem"><a href="#" itemprop="sameAs"><img src="~/Images/Test/sorush.png" alt="سروش" class="size-7"></a></li>
                    </ul>
                    <h4 class="font-bold text-lg my-5" aria-label="عضویت در خبرنامه">عضویت در خبرنامه</h4>
                    <form action="#" method="POST" itemprop="potentialAction" itemscope="" itemtype="http://schema.org/SubscribeAction">
                        <meta itemprop="target" content="/newsletter-subscribe">
                        <div class="flex items-center">
                            <input type="tel" name="mobile" inputmode="numeric" pattern="[0-9]*" class="w-full dark:bg-zinc-700 focus:ring-primary direction outline-0 focus:border-primary border-2 border-transparent rounded-xl bg-gray-200 border-gray-300 py-4 px-3 dir-rtl" placeholder="شماره موبایل خود را وارد کنید" itemprop="query-input">
                            <button type="submit" class="bg-primary-grad mr-2 py-4 px-6 text-white rounded-xl" aria-label="ثبت شماره موبایل">ثبت</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Application Download -->
            <div class="grid gap-4 bg-primary-grad no-hover px-4 py-5 rounded-xl mt-5 grid-cols-4 place-items-center">
                <div class="lg:col-span-1 col-span-4 w-full">
                    <h4 class="font-bold text-xl text-white">دانلود اپلیکیشن فروشگاهی دیجی استور</h4>
                </div>
                <div class="lg:col-span-3 col-span-4 w-full">
                    <ul class="flex items-center justify-end space-x-3">
                        <li>
                            <a href="#" itemprop="downloadUrl" itemscope="" itemtype="http://schema.org/SoftwareApplication">
                                <meta itemprop="applicationCategory" content="BusinessApplication">
                                <img src="~/Images/Test/google-play-app.svg" alt="دانلود از گوگل پلی" class="h-12">
                            </a>
                        </li>
                        <li>
                            <a href="#" itemprop="downloadUrl" itemscope="" itemtype="http://schema.org/SoftwareApplication">
                                <meta itemprop="operatingSystem" content="Android">
                                <img src="~/Images/Test/app-sibapp.svg" alt="دانلود از سیب‌اپ" class="h-12">
                            </a>
                        </li>
                        <li>
                            <a href="#" itemprop="downloadUrl" itemscope="" itemtype="http://schema.org/SoftwareApplication">
                                <meta itemprop="operatingSystem" content="Android">
                                <img src="~/Images/Test/bazar-app.svg" alt="دانلود از بازار" class="h-12">
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- Description & Trust Seals -->
            <div class="grid gap-4 grid-cols-4 mt-10">
                <div class="lg:col-span-3 col-span-4" itemprop="description">
