    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // --- عناصر DOM ---
            const mobileMenuTrigger = document.getElementById('mobile-menu-trigger');
            const megaMenuWrapper = document.getElementById('mega-menu-wrapper');
            let megaMenuContent = document.getElementById('mega-menu-content'); // فرض می‌کنیم MenuComponent این ID را رندر می‌کند
            const overlay = document.querySelector('.mobile-menu-overlay');
            const desktopMenuContainer = document.getElementById('desktop-menu-container'); // اضافه شد

            if (!megaMenuContent) {
                console.error("Mega Menu Content (ID: mega-menu-content) not found. Ensure MenuComponent renders it.");
                return; // اگر منو رندر نشده، ادامه نده
            }

            // تابع برای جابجایی DOM منو بر اساس سایز صفحه
            function setupMenuLocation() {
                if (window.innerWidth > 1024) { // دسکتاپ
                    // مطمئن می‌شویم که منو در مکان دسکتاپ (داخل desktop-menu-container) است
                    if (desktopMenuContainer && !desktopMenuContainer.contains(megaMenuContent)) {
                        desktopMenuContainer.appendChild(megaMenuContent);
                        megaMenuContent.classList.remove('active'); // اطمینان از بسته بودن در دسکتاپ
                        overlay.style.display = 'none'; // اطمینان از مخفی بودن overlay
                        document.body.style.overflow = ''; // رفع قفل اسکرول
                    }
                } else { // موبایل
                    // مطمئن می‌شویم که منو در مکان موبایل (داخل mega-menu-wrapper) است
                    if (megaMenuWrapper && !megaMenuWrapper.contains(megaMenuContent)) {
                        megaMenuWrapper.appendChild(megaMenuContent);
                    }
                }
            }

            function initializeMenuEvents() {
                // اگر قبلا رویدادها متصل شده‌اند، از اتصال مجدد خودداری کنید
                // یا از removeEventListener قبل از addEventListener استفاده کنید
                // برای سادگی اینجا فرض می‌کنیم یک بار فراخوانی می‌شود
                const closeBtn = megaMenuContent.querySelector('.close-menu-btn');
                const submenuToggles = megaMenuContent.querySelectorAll('.main-categories .has-submenu > a');

                // باز کردن منوی موبایل (با استفاده از offcanvas-right)
                // این بخش اکنون offcanvas-right را باز می‌کند نه megaMenuContent را مستقیما
                mobileMenuTrigger.addEventListener('click', function (e) {
                    e.preventDefault();
                    // اگر megaMenuContent را برای موبایل استفاده می‌کنید:
                    // megaMenuContent.classList.add('active');
                    // overlay.style.display = 'block';
                    // document.body.style.overflow = 'hidden';

                    // اگر از offcanvas-right برای منوی موبایل جداگانه استفاده می‌کنید:
                    toggleOffcanvas('offcanvas-right'); // فراخوانی تابع موجود برای offcanvas
                });

                // بستن منوی موبایل
                function closeMenu() {
                    // اگر megaMenuContent را برای موبایل استفاده می‌کنید:
                    // megaMenuContent.classList.remove('active');
                    // overlay.style.display = 'none';
                    // document.body.style.overflow = '';

                    // اگر از offcanvas-right برای منوی موبایل جداگانه استفاده می‌کنید:
                    closeOffcanvas(); // فراخوانی تابع موجود برای offcanvas
                }

                if (closeBtn) closeBtn.addEventListener('click', closeMenu);
                if (overlay) overlay.addEventListener('click', closeMenu);

                // باز و بسته کردن زیرمنوها (آکاردئون) در موبایل
                submenuToggles.forEach(toggle => {
                    toggle.addEventListener('click', function (event) {
                        if (window.innerWidth <= 1024) { // فقط در حالت موبایل/تبلت
                            event.preventDefault();
                            const parentLi = this.parentElement;
                            const subPanel = parentLi.querySelector('.sub-category-panel');

                            // بستن سایر زیرمنوها قبل از باز کردن جدید
                            submenuToggles.forEach(otherToggle => {
                                if (otherToggle !== toggle) {
                                    const otherParentLi = otherToggle.parentElement;
                                    const otherSubPanel = otherParentLi.querySelector('.sub-category-panel');
                                    otherParentLi.classList.remove('open');
                                    if (otherSubPanel) otherSubPanel.classList.remove('open');
                                }
                            });

                            parentLi.classList.toggle('open');
                            if (subPanel) {
                                subPanel.classList.toggle('open');
                            }
                        }
                    });
                });
            }

            // --- اجرای اولیه و در زمان تغییر سایز پنجره ---
            setupMenuLocation(); // منو را در جای صحیح قرار بده
            initializeMenuEvents(); // رویدادها را یک بار متصل کن
            window.addEventListener('resize', setupMenuLocation); // با تغییر اندازه صفحه دوباره بررسی کن
        });
    </script>

