@model IEnumerable<DigiStore.DataAccessLayer.Entities.Product>
@using DigiStore.Core.Classes
@inject PanelLayoutScope scope
@{
    ViewData["Title"] = "نمایش محصولات";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="page-title">نمایش محصولات</h3>
            <div class="d-inline-block align-items-center">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
                        <li class="breadcrumb-item active" aria-current="page">در این قسمت می توانید تمامی محصولات خود را مدیریت کنید.</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="row">
        <div class="col-lg-6 col-6">
            <!-- دکمه باز کردن -->
            <button onclick="AddProductModal()" class="btn btn-facebook" data-toggle="modal" data-target="#LargeModel" data-title="ایجاد محصول جدید">
                ایجاد محصول جدید
            </button>
        </div>
        <div class="col-lg-6 col-6">
            <div class="search-container" id="searchBox">
                <input type="text" id="searchInput" onkeyup="SearchFunction()" placeholder="جستجو کنید..." />
                <a class="icon" onclick="toggleSearch()">
                    <i class="fa fa-search"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-12 col-12">
            <div class="box">
                <div class="box-header with-border">
                    <h4 class="box-title">محصولات من</h4>
                </div>
                <div class="box-body">
                    <div class="table-responsive">
                        <div id="invoice-list_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                            <div class="row">
                                <div class="col-sm-12 col-md-6"></div>
                                <div class="col-sm-12 col-md-6"></div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-hover no-wrap dataTable no-footer" data-page-size="10" role="grid" aria-describedby="invoice-list_info">
                                        @if (!Model.Any())
                                        {
                                            <tr>
                                                <td colspan="3">
                                                    <h5 class="text-center">هیچ موردی برای نمایش وجود ندارد</h5>
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <thead>
                                                <tr role="row">
                                                    <th tabindex="0" aria-controls="invoice-list" rowspan="1" colspan="1" aria-sort="ascending" aria-label="#Invoice: activate to sort column descending" style="width: 98.0469px;">@Html.DisplayNameFor(model => model.Name)</th>
                                                    <th tabindex="0" aria-controls="invoice-list" rowspan="1" colspan="1" aria-sort="ascending" aria-label="#Invoice: activate to sort column descending" style="width: 98.0469px;">@Html.DisplayNameFor(model => model.Price)</th>
                                                    <th tabindex="0" aria-controls="invoice-list" rowspan="1" colspan="1" aria-sort="ascending" aria-label="#Invoice: activate to sort column descending" style="width: 98.0469px;">بازدید</th>
                                                    <th tabindex="0" aria-controls="invoice-list" rowspan="1" colspan="1" aria-sort="ascending" aria-label="#Invoice: activate to sort column descending" style="width: 98.0469px;">عملیات</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr role="row" class="odd">
                                                        <td>
                                                            @Html.DisplayFor(model => item.Name)
                                                        </td>
                                                        <td>
                                                            <p>@item.Price.ToString("n0") ریال</p>
                                                        </td>
                                                        <td>
                                                            @scope.GetProductSeen(item.Id)
                                                        </td>
                                                        <td>
                                                            <a href="/Panel/IndexProductFields/@item.Id" class="btn btn-dropbox btn-sm" data-bs-toggle="tooltip">
                                                                <i class="fa fa-list fa-lg me-2" aria-hidden="true"></i>
                                                                مشخصه ها
                                                            </a>

                                                            <span class="vr mx-2"></span> <!-- خط عمودی -->

                                                            <a href="/Panel/AddGallery/@item.Id" class="btn btn-github btn-sm" data-bs-toggle="tooltip">
                                                                <i class="fa fa-image fa-lg me-2" aria-hidden="true"></i>
                                                                گالری
                                                            </a>

                                                            <span class="vr mx-2"></span> <!-- خط عمودی -->

                                                            <a href="#" onclick="DetailsProductModal(@item.Id)" class="btn btn-info btn-sm" data-bs-toggle="tooltip" data-toggle="modal" data-target="#LargeModel" data-title="جزئیات محصول">
                                                                <i class="fa fa-info-circle fa-lg me-2" aria-hidden="true"></i>
                                                                جزئیات
                                                            </a>

                                                            <span class="vr mx-2"></span> <!-- خط عمودی -->

                                                            <a href="#" onclick="EditProductModal(@item.Id)" class="btn btn-primary btn-sm" data-bs-toggle="tooltip" data-toggle="modal" data-target="#LargeModel" data-title="ویرایش محصول">
                                                                <i class="fa fa-edit fa-lg me-2" aria-hidden="true"></i>
                                                                ویرایش
                                                            </a>

                                                            <span class="vr mx-2"></span> <!-- خط عمودی -->

                                                            <a href="#" onclick="DeleteProductModal(@item.Id)" class="btn btn-danger btn-sm" data-bs-toggle="tooltip" data-toggle="modal" data-target="#MiniModel" data-title="تأیید حذف">
                                                                <i class="fa fa-trash fa-lg me-2" aria-hidden="true"></i>
                                                                حذف
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</section>


<div id="LargeModel" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content modern-modal">

            <!-- هدر -->
            <div class="modal-header">
                <h4 class="modal-title" id="LargeModelTitle">عنوان مودال</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <!-- بدنه -->
            <div id="LargeModelBody" class="modal-body">
                <!-- محتوا از AJAX میاد -->
            </div>
        </div>
    </div>
</div>


<div id="MiniModel" class="fade modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content modern-modal">
            <!-- هدر -->
            <div class="modal-header">
                <h4 class="modal-title" id="MiniModelTitle">عنوان مودال</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div id="MiniModelBody" class="modal-body">
                <!-- محتوا از AJAX میاد -->
            </div>
        </div>
    </div>
</div>

<style>
    .modal-backdrop {
        z-index: 1040 !important;
        position: fixed;
    }

    .modal {
        z-index: 1055 !important;
    }
</style>




@section ScriptManager
{
    <script>
    function AddProductModal() {
        $.ajax({
            url: "/Panel/AddProduct/",
            type: "GET",
            success: function (result) {
                $('#LargeModelBody').html(result);
                $('#LargeModel').appendTo('body').modal({
                    backdrop: 'static',
                    keyboard: false,
                    show: true
                });

                BindFormLargeModal();
            }
        });
    }

    function EditProductModal(id) {
        $.ajax({
            url: "/Panel/EditProduct/" + id,
            type: "GET",
            success: function (result) {
                $('#LargeModelBody').html(result);
                $('#LargeModel').appendTo('body').modal({
                    backdrop: 'static',
                    keyboard: false,
                    show: true
                });

                BindFormLargeModal();
            }
        });
    }

    function DeleteProductModal(id) {
        $.ajax({
            url: "/Panel/DeleteProduct/" + id,
            type: "GET",
            success: function (result) {
                $('#MiniModelBody').html(result);
                $('#MiniModel').appendTo('body').modal({
                    backdrop: 'static',
                    keyboard: false,
                    show: true
                });

                BindFormMiniModal();
            }
        });
    }

    function DetailsProductModal(id) {
        $.ajax({
            url: "/Panel/DetailsProduct/" + id,
            type: "GET",
            success: function (result) {
                $('#LargeModelBody').html(result);
                $('#LargeModel').appendTo('body').modal({
                    backdrop: 'static',
                    keyboard: false,
                    show: true
                });

                BindFormLargeModal();
            }
        });
    }
   </Script>
<script src="~/js/bindforms.js"></script>

   }


