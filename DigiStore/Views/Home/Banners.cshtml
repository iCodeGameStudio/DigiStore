@model IEnumerable<DigiStore.DataAccessLayer.Entities.Banner>

@{
    Layout = null;
}



<div class="card shadow-lg border-0 rounded-3 overflow-hidden"
     style="font-family: 'IranSans', Tahoma, sans-serif;">

    <!-- جدول -->
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center p-5">
                <i class="fa fa-info-circle fa-2x text-muted mb-3"></i>
                <h5 class="mb-0">هیچ موردی برای نمایش وجود ندارد</h5>
            </div>
        }
        else
        {
            <div class="table-responsive" style="max-height:400px;">
                <table id="MyDataTable" class="table table-striped table-hover mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.Day)</th>
                            <th>@Html.DisplayNameFor(model => model.Price)</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(model => item.Name)</td>
                                <td>@Html.Raw(item.Description)</td>
                                <td>@Html.DisplayFor(model => item.Day)</td>
                                <td>@item.Price.ToString("n0") ریال</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>



