@model IEnumerable<DigiStore.DataAccessLayer.Entities.ProductSeen>

@{
    Layout = null;
}



<div class="card shadow-lg border-0 rounded-3 overflow-hidden"
     style="font-family: 'IranSans', Tahoma, sans-serif;">

    <!-- هدر تعداد بازدید -->
    <div class="card-header text-white text-center py-3"
         style="background: linear-gradient(135deg,#17a2b8,#007bff); font-weight:700; font-size:1.2rem;">
        بازدید: @Model.Count()
    </div>

    <!-- جدول -->
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center p-5">
                <i class="fa fa-info-circle fa-2x text-muted mb-3"></i>
                <h5 class="mb-0">هیچ موردی برای نمایش وجود ندارد</h5>
            </div>
        }
        else
        {
            <div class="table-responsive" style="max-height:400px;">
                <table id="MyDataTable" class="table table-striped table-hover mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.IP)</th>
                            <th>@Html.DisplayNameFor(model => model.Date)</th>
                            <th>@Html.DisplayNameFor(model => model.Time)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(model => item.IP)</td>
                                <td>@Html.DisplayFor(model => item.Date)</td>
                                <td>@Html.DisplayFor(model => item.Time)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
