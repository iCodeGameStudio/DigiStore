@model IEnumerable<DigiStore.DataAccessLayer.Entities.Banner>

@{
    ViewData["Title"] = "نمایش جایگاه ها";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="page-title">نمایش جایگاه ها</h3>
            <div class="d-inline-block align-items-center">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
                        <li class="breadcrumb-item active" aria-current="page">در این قسمت می توانید جایگاه ها را مدیریت کنید.</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="row">
        <div class="col-lg-12 col-12">
            <div class="box">
                <div class="box-header with-border">
                    <h4 class="box-title">لیست جایگاه ها</h4>
                </div>
                <div class="box-body">
                    <div class="table-responsive">
                        <div id="invoice-list_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                            <div class="row">
                                <div class="col-sm-12 col-md-6"></div>
                                <div class="col-sm-12 col-md-6"></div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-hover no-wrap dataTable no-footer" data-page-size="10" role="grid" aria-describedby="invoice-list_info">
                                        @if (!Model.Any())
                                        {
                                            <tr>
                                                <td colspan="3">
                                                    <h5 class="text-center">هیچ موردی برای نمایش وجود ندارد</h5>
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <thead>
                                                <tr role="row">
                                                    <th class="sorting_asc" tabindex="0" aria-controls="invoice-list" rowspan="1" colspan="1" aria-sort="ascending" aria-label="#Invoice: activate to sort column descending" style="width: 98.0469px;">@Html.DisplayNameFor(model => model.Name)</th>
                                                    <th class="sorting_asc" tabindex="0" aria-controls="invoice-list" rowspan="1" colspan="1" aria-sort="ascending" aria-label="#Invoice: activate to sort column descending" style="width: 98.0469px;">@Html.DisplayNameFor(model => model.Day)</th>
                                                    <th class="sorting_asc" tabindex="0" aria-controls="invoice-list" rowspan="1" colspan="1" aria-sort="ascending" aria-label="#Invoice: activate to sort column descending" style="width: 98.0469px;">@Html.DisplayNameFor(model => model.Price)</th>

                                                    <th tabindex="0" aria-controls="invoice-list" rowspan="1" colspan="1" aria-label="View: activate to sort column ascending" style="width: 69.7969px;">عملیات</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr role="row" class="odd">
                                                        <td>
                                                            @Html.DisplayFor(model => item.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(model => item.Day) روز
                                                        </td>
                                                        <td>
                                                            @item.Price.ToString("n0") ریال
                                                        </td>
                                                        <td>
                                                            <a href="#" onclick="DetailsBannerModal(@item.Id)" class="btn btn-info btn-sm" data-bs-toggle="tooltip" data-toggle="modal" data-target="#LargeModel" data-title="جزئیات جایگاه">
                                                                <i class="fa fa-table fa-lg me-2" aria-hidden="true"></i>
                                                                جزئیات
                                                            </a>
                                                            <span class="vr mx-2"></span> <!-- خط عمودی -->
                                                            <a href="#" onclick="EditBannerModal(@item.Id)" class="btn btn-primary btn-sm" data-bs-toggle="tooltip" data-toggle="modal" data-target="#LargeModel" data-title="ویرایش جایگاه">
                                                                <i class="fa fa-edit fa-lg me-2" aria-hidden="true"></i>
                                                                ویرایش
                                                            </a>
                                                            <span class="vr mx-2"></span> <!-- خط عمودی -->
                                                            <a href="/Admin/ShowBannerDetails/@item.Id" class="btn btn-success btn-sm" data-bs-toggle="tooltip" >
                                                                <i class="fa fa-ticket fa-lg me-2" aria-hidden="true"></i>
                                                                بنرها
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</section>

<div id="LargeModel" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content modern-modal">

            <!-- هدر -->
            <div class="modal-header">
                <h4 class="modal-title" id="LargeModelTitle">عنوان مودال</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <!-- بدنه -->
            <div id="LargeModelBody" class="modal-body">
                <!-- محتوا از AJAX میاد -->
            </div>
        </div>
    </div>
</div>


<style>
    .modal-backdrop {
        z-index: 1040 !important;
        position: fixed;
    }

    .modal {
        z-index: 1055 !important;
    }
</style>




@section ScriptManager
{
    <script>
        function EditBannerModal(id) {
            $.ajax({
                url: "/Admin/EditBanner/" + id,
                type: "GET",
                success: function (result) {
                    $('#LargeModelBody').html(result);
                    $('#LargeModel').appendTo('body').modal({
                        backdrop: 'static',
                        keyboard: false,
                        show: true
                    });

                    BindFormLargeModal();
                }
            });
        }

        function DetailsBannerModal(id) {
            $.ajax({
                url: "/Admin/DetailsBanner/" + id,
                type: "GET",
                success: function (result) {
                    $('#LargeModelBody').html(result);
                    $('#LargeModel').appendTo('body').modal({
                        backdrop: 'static',
                        keyboard: false,
                        show: true
                    });

                    BindFormLargeModal();
                }
            });
        }


    </script>

    <script src="~/js/bindforms.js"></script>
}
