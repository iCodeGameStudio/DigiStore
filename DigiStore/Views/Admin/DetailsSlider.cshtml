@model DigiStore.DataAccessLayer.Entities.Slider

@{
    bool isAjax = Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest";

    if (!isAjax)
    {
        // ریدایرکت با استفاده از HttpContext
        Context.Response.Redirect("/");
        return; // جلوگیری از ادامه رندر
    }
    Layout = null;
}
<div class="card border-0 rounded-3 overflow-hidden">

    <!-- بدنه کارت -->
    <div class="card-body">
        <div class="row mb-5">

            <!-- جزئیات اسلایدر سمت راست -->
            <div class="col-md-7">
                <div class="row text-right">
                    <div class="col-12 mb-4">
                        <strong class="h5"><i class="fa fa-tag text-facebook mr-1"></i> عنوان اسلاید:</strong>
                        <span class="h6">@Model.Title</span>
                    </div>
                    <div class="col-12 mb-4">
                        <strong class="h5"><i class="fa fa-sort-amount-asc text-facebook mr-1"></i> ترتیب نمایش:</strong>
                        <span class="h6">@Model.OrderShow</span>
                    </div>
                    <div class="col-12 mb-4">
                        <strong class="h5"><i class="fa fa-eye text-facebook mr-1"></i> وضعیت نمایش:</strong>
                        @if (Model.NotShow)
                        {
                            <span class="badge badge-danger"><i class="fa fa-times-circle mr-1"></i> عدم نمایش</span>
                        }
                        else
                        {
                            <span class="badge badge-success"><i class="fa fa-check-circle mr-1"></i> نمایش</span>
                        }
                    </div>
                    <div class="col-12 mt-4">
                        <strong class="h5"><i class="fa fa-align-left text-facebook mr-1"></i> توضیحات:</strong>
                        <p class="h6">@Html.Raw(Model.Description)</p>
                    </div>
                </div>
            </div>
            <!-- تصویر اسلایدر سمت چپ -->
            <div class="col-md-5 mb-4">
                <img src="~/Images/Sliders/@Model.Image"
                     class="img-fluid rounded shadow"
                     alt="تصویر اسلاید"
                     style="max-height:500px; width:100%; transition: transform .3s; cursor: pointer;"
                     onmouseover="this.style.transform='scale(1.05)'"
                     onmouseout="this.style.transform='scale(1)'" />
            </div>
        </div>
    </div>
</div>
