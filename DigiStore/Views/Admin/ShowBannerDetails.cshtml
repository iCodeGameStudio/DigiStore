@model IEnumerable<DigiStore.DataAccessLayer.Entities.BannerDetails>

@{
    ViewData["Title"] = "نمایش بنر های جایگاه";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="page-title">نمایش بنرهای جایگاه</h3>
            <div class="d-inline-block align-items-center">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
                        <li class="breadcrumb-item active" aria-current="page">در این قسمت می توانید جایگاه ها را مدیریت کنید.</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="row">
        <div class="col-lg-6 col-6">
            <!-- دکمه باز کردن -->
            <button onclick="AddBannerModal(@ViewBag.BannerId)" class="btn btn-facebook" data-toggle="modal" data-target="#MiniModel" data-title="ثبت بنر جدید">
                ایجاد بنر جدید
            </button>
        </div>
        <div class="col-lg-12 col-12">
            <div class="box">
                <div class="box-header with-border">
                    <h4 class="box-title">لیست جایگاه ها</h4>
                </div>
                <div class="box-body">
                    <div class="table-responsive">
                        <div id="invoice-list_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                            <div class="row">
                                <div class="col-sm-12 col-md-6"></div>
                                <div class="col-sm-12 col-md-6"></div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-hover no-wrap dataTable no-footer" data-page-size="10" role="grid" aria-describedby="invoice-list_info">
                                        @if (!Model.Any())
                                        {
                                            <tr>
                                                <td colspan="3">
                                                    <h5 class="text-center">هیچ موردی برای نمایش وجود ندارد</h5>
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <thead>
                                                <tr role="row">
                                                    <th tabindex="0" aria-controls="invoice-list" rowspan="1" colspan="1" aria-sort="ascending" aria-label="#Invoice: activate to sort column descending" style="width: 98.0469px;">@Html.DisplayNameFor(model => model.Title)</th>
                                                    <th tabindex="0" aria-controls="invoice-list" rowspan="1" colspan="1" aria-sort="ascending" aria-label="#Invoice: activate to sort column descending" style="width: 98.0469px;">@Html.DisplayNameFor(model => model.StartDate)</th>
                                                    <th tabindex="0" aria-controls="invoice-list" rowspan="1" colspan="1" aria-sort="ascending" aria-label="#Invoice: activate to sort column descending" style="width: 98.0469px;">@Html.DisplayNameFor(model => model.EndDate)</th>
                                                    <th tabindex="0" aria-controls="invoice-list" rowspan="1" colspan="1" aria-sort="ascending" aria-label="#Invoice: activate to sort column descending" style="width: 98.0469px;">تصویر بنر</th>
                                                    <th tabindex="0" aria-controls="invoice-list" rowspan="1" colspan="1" aria-sort="ascending" aria-label="#Invoice: activate to sort column descending" style="width: 98.0469px;">وضعیت انقضا</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr role="row" class="odd">
                                                        <td>
                                                            @Html.DisplayFor(model => item.Title)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(model => item.StartDate)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(model => item.EndDate)
                                                        </td>
                                                        <td>
                                                           <img src="~/Images/Ads/@item.Image" class="Img-fluid" width="100" height="50" />
                                                        </td>
                                                        <td>
                                                            @if (!item.IsExpire)
                                                            {
                                                           
                                                                <span class="badge badge-success"><i class="fa fa-check-circle mr-1"></i> فعال</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge badge-danger"><i class="fa fa-times-circle mr-1"></i> منقضی شده</span>

                                                            }
                                                            @* @Html.DisplayFor(model => item.IsExpire) *@
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</section>

<div id="MiniModel" class="fade modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content modern-modal">
            <!-- هدر -->
            <div class="modal-header">
                <h4 class="modal-title" id="MiniModelTitle">عنوان مودال</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div id="MiniModelBody" class="modal-body">
                <!-- محتوا از AJAX میاد -->
            </div>
        </div>
    </div>
</div>


<style>
    .modal-backdrop {
        z-index: 1040 !important;
        position: fixed;
    }

    .modal {
        z-index: 1055 !important;
    }
</style>




@section ScriptManager
{
    <script>
        function AddBannerModal(id) {
            $.ajax({
                url: "/Admin/AddBannerDetails/" + id,
                type: "GET",
                success: function (result) {
                    $('#MiniModelBody').html(result);
                    $('#MiniModel').appendTo('body').modal({
                        backdrop: 'static',
                        keyboard: false,
                        show: true
                    });

                    BindFormMiniModal();
                }
            });
        }


    </script>

    <script src="~/js/bindforms.js"></script>
}
