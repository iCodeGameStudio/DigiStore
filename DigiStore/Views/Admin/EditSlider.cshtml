@model DigiStore.Core.ViewModels.AdminSliderViewModel

@{
    bool isAjax = Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest";

    if (!isAjax)
    {
        // ریدایرکت با استفاده از HttpContext
        Context.Response.Redirect("/");
        return; // جلوگیری از ادامه رندر
    }
    Layout = null;
}


<form asp-action="EditSlider" id="MyForm" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <!-- تصویر اسلاید سمت چپ -->
        <div class="col-md-5 text-center mb-4 order-md-2 order-1">
            <img src="~/Images/Sliders/@Model.ImageName"
                 alt="تصویری پیدا نشد"
                 class="img-fluid rounded shadow"
                 style="max-height:400px; width:100%; transition: transform .3s; cursor: pointer;"
                 onmouseover="this.style.transform='scale(1.05)'"
                 onmouseout="this.style.transform='scale(1)'" />
        </div>

        <!-- فیلدهای فرم سمت راست -->
        <div class="col-md-7 order-md-1 order-2">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ti-pencil"></i></span>
                    </div>
                    <input asp-for="Title" class="form-control" placeholder="عنوان اسلاید" />
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ti-pencil"></i></span>
                    </div>
                    <input asp-for="OrderShow" class="form-control toPersianNumber" placeholder="ترتیب نمایش" />
                </div>
                <span asp-validation-for="OrderShow" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ti-pencil"></i></span>
                    </div>
                    <textarea asp-for="Description" class="form-control" placeholder="سایر توضیحات"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ti-file"></i> انتخاب عکس اسلاید</span>
                    </div>
                    <input type="file" asp-for="Image" class="form-control" />
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <!-- وضعیت نمایش -->
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="NotShow" id="basic_checkbox_2" />
                    <label class="form-check-label" for="basic_checkbox_2">
                        @Html.DisplayNameFor(model => model.NotShow)
                    </label>
                </div>
            </div>
        </div>
    </div>
    <input type="submit" value="ویرایش" class="btn btn-success btn-block" />
</form>

<script>
    // قبل از submit فرم، محتوا را به textarea منتقل کن
    document.querySelector('form').addEventListener('submit', function (e) {
        for (var instance in CKEDITOR.instances) {
            CKEDITOR.instances[instance].updateElement();
        }
    });

    CKEDITOR.replace('Description', {
        contentsCss: ['~/CSS/Font.css'], // CSS فونت‌ها
        font_names: 'Iransans;' // فونت‌های نمایش داده شده در Toolbar
    });
</script>
